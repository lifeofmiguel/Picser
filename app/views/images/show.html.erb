<% if current_account %>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">


<div class="navbar navbar-expand-lg bg-dark navbar-dark mb-3">
  <div class="container">
    <%= link_to "Picser", root_path, class: 'navbar-brand' %>
    <% if current_account %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Recent", images_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Upload", upload_path, class: 'btn btn-primary' %>
      </li>
    </ul>
      <% end %>

    <ul class="navbar-nav">
      <li class="nav-item">
        <% if account_signed_in? %>
          <li class="nav-item">
            <%= button_to "Log Out", destroy_account_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_account_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Create an Account", new_account_registration_path, class: 'btn btn-primary' %>
          </li>
        <% end %>
      </li>
    </ul>
  </div>
</div>



<h2>Image</h2>

<div class="row">
  <div class="col-md-9">
    <div class="card">
      <div class="card-body p-2">
        
        <% if @image.image.attached? %>
          <p>
            <%= image_tag @image.image %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <%= link_to @image.account_id %>

    <p class="border-top mt-3 py-2">
      <% if @image.caption.present? %>
        <%= @image.caption %> -
      <% end %>
      <span class="text-muted"><%= time_ago_in_words @image.created_at %> ago</span>
    </p>
  </div>
</div>
<h2> <%= @image.comments.count %> Comments </h2>
    
 <%= render partial:"comments/comment", locals:{comment:@comment, image: @image, account: current_account} %>
<% @image.comments.each do |comment| %>


<p><%= comment.name %> </p>
<p><%= comment.body %> </p>
<p><%= time_ago_in_words(comment.created_at) %></p>





<!-- <p><%= button_to 'Delete Comment', @comment, method: :"delete" %></p> -->
<% end %>


<div>
  <% if current_account.present? %>
  <li id = "Edit Post"><%= link_to "edit", edit_account_image_path(current_account, @image) %></li><br><br>
  <%= button_to "Delete Image", @image, method: "delete" %><br />
  <% end %>
</div>

<% else %>
<%= link_to "log in", new_account_session_path  %><br>
    you must sign in or sign up
<%= link_to "sign up", new_account_registration_path %>
<% end %>