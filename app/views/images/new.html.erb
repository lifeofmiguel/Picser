<% if current_account %>

<h2> Upload Image </h2>

<div class= "row">
    <div class="col-md-6 offset-md-3">
    <%= form_for :image do |f| %>
        <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>

    <div class="form-group">
        <%= f.label :Caption %>
        <%= f.text_area :caption, class: 'form-control' %>
      </div>

        <%= f.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<% else %>
<%= link_to "log in", new_account_session_path  %><br>
you must sign in or sign up
<%= link_to "sign up", new_account_registration_path %>
<% end %>