<h2> Upload Image </h2>

<div class= "row">
    <%= form_for @image do |f| %>
        <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
        </div>

<div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

<%= f.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>