<h2> Upload Image </h2>

<div class= "row">
    <div class="col-md-6 offset-md-3">
    <%= form_for images_path do |f| %>
        <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

        <%= f.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>